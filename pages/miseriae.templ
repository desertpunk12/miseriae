package pages

// Shared CSS Classes
const (

	// Hero shared classes
	heroBtnBase = "flex items-center justify-center rounded-full h-12 px-8 text-base font-bold transition-all"

	// Blog Card shared classes
	blogCardContainer    = "group flex flex-col gap-4 rounded-xl bg-white dark:bg-[#2d1b24] p-4 shadow-sm hover:shadow-xl transition-all duration-300 border border-[#f4f0f2] dark:border-[#3d2b34]"
	blogCardImgContainer = "relative w-full aspect-[4/3] overflow-hidden rounded-lg bg-gray-100"
	blogCardImg          = "w-full h-full bg-cover bg-center transition-transform duration-700 group-hover:scale-110"
	blogCardBadge        = "absolute top-3 left-3 bg-white/90 dark:bg-black/70 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-primary uppercase tracking-wide"
	blogCardDate         = "flex items-center gap-2 text-xs text-text-muted dark:text-gray-500 font-medium"
	blogCardTitle        = "text-lg font-bold text-text-main dark:text-white leading-tight group-hover:text-primary transition-colors line-clamp-2"
	blogCardExcerpt      = "text-text-muted dark:text-gray-400 text-sm line-clamp-3"
	blogCardBtn          = "text-sm font-bold text-text-main dark:text-white flex items-center gap-1 hover:gap-2 transition-all group-hover:text-primary"

	// Gallery shared classes
	galleryItemBase    = "group relative overflow-hidden rounded-2xl cursor-pointer"
	galleryItemImage   = "w-full h-full bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
	galleryItemOverlay = "absolute inset-0 bg-primary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
)

