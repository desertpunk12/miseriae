package pages

templ BlogHead() {
	<script id="tailwind-config">
		tailwind.config = {
			darkMode: "class",
			theme: {
				extend: {
					colors: {
						"primary": "#ff69b4", // Hot Pink - Main Bubblegum color
						"primary-light": "#ffd1e8", // Light Pink for backgrounds
						"primary-dark": "#e05da5", // Darker pink for hovers
						"background-light": "#fff5f9", // Very light pinkish white
						"background-dark": "#3c1e30", // Dark mode background
						"accent-pink": "#f786c2", // Secondary playful pink
						"accent-purple": "#e0b0ff", // Playful purple accent
						"text-dark": "#4a1936", // Dark text for contrast
					},
					fontFamily: {
						"display": ["Spline Sans", "sans-serif"],
						"body": ["Noto Sans", "sans-serif"]
					},
					borderRadius: {
						"DEFAULT": "1rem",
						"lg": "1.5rem",
						"xl": "2rem",
						"2xl": "3rem", // Increased for a bubblier feel
						"3xl": "4rem",
						"full": "9999px",
						"bubble-sm": "30% 70% 70% 30% / 50% 50% 50% 50%",
						"bubble-md": "60% 40% 30% 70% / 50% 40% 60% 50%",
						"bubble-lg": "40% 60% 60% 40% / 70% 50% 50% 30%",
					},
					backgroundImage: {
						'sparkles': "url(\"data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ff69b4' fill-opacity='0.15'%3E%3Cpath d='M20 0L22.5 7.5L30 10L22.5 12.5L20 20L17.5 12.5L10 10L17.5 7.5L20 0Z'/%3E%3Cpath d='M5 15L7.5 22.5L15 25L7.5 27.5L5 35L2.5 27.5L-5 25L2.5 22.5L5 15Z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E\")",
						'gradient-pop': 'linear-gradient(135deg, #ff69b4, #f786c2, #e0b0ff)',
					},
					boxShadow: {
						'pop': '0 10px 20px -5px rgba(255, 105, 180, 0.3), 0 4px 6px -2px rgba(255, 105, 180, 0.1)',
						'pop-lg': '0 20px 30px -10px rgba(255, 105, 180, 0.4), 0 8px 12px -4px rgba(255, 105, 180, 0.15)',
					}
				},
			},
		}
	</script>
	<style>
		::-webkit-scrollbar {
			width: 8px;
		}
		::-webkit-scrollbar-track {
			background: #fff5f9;
		}
		::-webkit-scrollbar-thumb {
			background: #ff69b4;
			border-radius: 4px;
		}
		::-webkit-scrollbar-thumb:hover {
			background: #e05da5;
		}
		.blog-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
			gap: 2rem;
		}
		.blog-grid > div:nth-child(5n+1) { transform: rotate(-2deg); margin-top: 0rem; }
		.blog-grid > div:nth-child(5n+2) { transform: rotate(2.5deg); margin-top: 2rem; }
		.blog-grid > div:nth-child(5n+3) { transform: rotate(1deg); margin-top: -1.5rem; }
		.blog-grid > div:nth-child(5n+4) { transform: rotate(-3deg); margin-top: 2.5rem; }
		.blog-grid > div:nth-child(5n+5) { transform: rotate(1.5deg); margin-top: -1rem; }
		.blog-card {
			transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
		}
		.blog-card:hover {
			transform: translateY(-12px) scale(1.03) rotate(0deg) !important;
			z-index: 10;
		}
	</style>
}

