package pages

import "cloudflare-worker-boilerplate/components"

// Shared CSS Classes
const (
	// Hero shared classes
	btnBase = "flex h-12 items-center justify-center gap-2 rounded-full px-8 text-base font-bold transition-all"
)

templ HomeHead() {
	<!-- Custom CSS -->
	<link rel="stylesheet" href="/assets/styles/home.css"/>
	<!-- HTMX -->
	<script src="https://unpkg.com/htmx.org@2.0.0"></script>
	<style>
		/* Smooth transitions for HTMX swapping */
		.htmx-settling {
			opacity: 0;
		}
		.fade-in {
			opacity: 1;
			transition: opacity 0.3s ease-in;
		}
	</style>
}

templ Home() {
	@Base("Miseriae", HomeHead(), templ.Attributes{"hx-boost": "true", "hx-indicator": "#global-loader", "class": "page-root fade-in"}, "home") {
		<!-- Optional Global Loader -->
		<div id="global-loader" class="fixed top-0 left-0 w-full h-1 bg-primary z-[60] hidden htmx-request:block"></div>
		<!-- Hero Section -->
		<section class="section-hero py-12">
			<div class="@container">
				<div class="flex flex-col-reverse gap-8 md:flex-row md:items-center">
					<!-- Text Content -->
					<div class="flex flex-1 flex-col gap-6 text-center md:text-left">
						<div class="flex flex-col gap-3">
							<div class="inline-flex w-fit items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-xs font-bold uppercase tracking-wide text-primary mx-auto md:mx-0">
								<span class="material-symbols-outlined text-sm">auto_awesome</span>
								<span>Welcome to my world</span>
							</div>
							<h1 class="text-4xl font-black leading-[1.1] tracking-tight text-text-main dark:text-white md:text-5xl lg:text-6xl">
								Bringing Characters
								<br class="hidden lg:block"/>
								to <span class="text-primary">Life!</span> âœ¨
							</h1>
							<p class="text-lg text-text-muted dark:text-gray-300 md:max-w-md">
								Hi! I'm <strong>Mia</strong>, a cosplayer, crafter, and dreamer sharing my journey through costume creation, tutorials, and convention adventures.
							</p>
						</div>
						<div class="flex flex-col gap-3 sm:flex-row sm:justify-center md:justify-start">
							<button class={ btnBase, "bg-primary text-white hover:bg-primary-hover hover:shadow-soft hover:-translate-y-0.5" }>
								<span>See My Portfolio</span>
								<span class="material-symbols-outlined text-sm">arrow_forward</span>
							</button>
							<a href="/blog" class={ btnBase, "bg-white border-2 border-background-light dark:border-white/10 dark:bg-transparent text-text-main dark:text-white hover:bg-background-light dark:hover:bg-white/5" }>
								<span>Read Blog</span>
							</a>
						</div>
					</div>
					<!-- Hero Image -->
					<div class="flex flex-1 justify-center relative">
						<!-- Decorative elements behind -->
						<div class="absolute top-10 right-10 size-20 rounded-full bg-yellow-200 blur-2xl opacity-60 animate-pulse"></div>
						<div class="absolute bottom-10 left-10 size-32 rounded-full bg-primary blur-3xl opacity-30"></div>
						
						<!-- Outer Wrapper: Matte & Rotation -->
						<!-- This acts as the solid background that absorbs the border's anti-aliasing -->
						<div class="relative w-full max-w-[500px] aspect-[4/5] rounded-2xl md:rounded-[3rem] shadow-2xl rotate-2 hover:rotate-0 transition-transform duration-500 dark:bg-[#221019]" style="backface-visibility: hidden;">
							
							<!-- Inner Container: Border & Content -->
							<!-- Sits on top of the matte, clipping the image -->
							<div class="absolute inset-0 rounded-2xl md:rounded-[3rem] overflow-hidden border-2 border-solid border-[#f8f6f7] dark:border-[#221019] dark:bg-[#221019]">
								<div class="w-full h-full bg-center bg-cover" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuD6ly0UYxFt_ndbRh28m9xieH7GspXv4mU9ZS9h_MMHrbJ8RxEfDIgG-HIAL-QQrC5r_q5XL6iYkvyEYq3ZG9XFzQkK7J1iUc9lcUrKC3ADmnTOqpCjkaCLIbN4oNjMuh1eVjCBxZwSiP8uQQflNCra6KnDb1rKPBY68qflMAYUopNvUVdO12uawG4F7taP8jDG_erO117VSgX9LsPc4yRBXqJBIzXqjGnHVZn9zMAE_AK52myjo7dq9MRtfnryNjPCCK2oIaL3irii'); transform: scale(1.02);"></div>
								<div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
								<div class="absolute bottom-6 left-6 right-6">
									<div class="flex items-center gap-2 rounded-full bg-white/90 p-2 backdrop-blur-sm w-fit shadow-sm">
										<div class="size-8 rounded-full bg-primary flex items-center justify-center text-white">
											<span class="material-symbols-outlined text-sm">favorite</span>
										</div>
										<span class="pr-3 text-xs font-bold text-text-main">New Costume!</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- Latest Blogs Section -->
		<section class="w-full max-w-6xl px-4 py-12 md:px-6">
			<div class="mb-8 flex items-end justify-between px-2">
				<div>
					<h2 class="text-2xl font-bold leading-tight tracking-tight text-text-main dark:text-white md:text-3xl">
						Latest <span class="text-primary">Blogs</span>
					</h2>
					<p class="mt-2 text-text-muted dark:text-gray-400">Tips, tricks, and behind the scenes.</p>
				</div>
				<a class="hidden text-sm font-bold text-primary hover:text-primary-hover sm:block" href="#">View All Posts -&gt;</a>
			</div>
